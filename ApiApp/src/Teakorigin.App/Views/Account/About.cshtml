@using System.Security.Claims

@{
  ViewData["Title"] = "Test claims";
}

<section class="row row--grey-light">
  <div class="layout layout--12">
    <h1>This is protect area</h1>
    <p>@ViewData["Message"]</p>

    <table>
      <tr>
        <th>Claim Type</th>
        <th>Claim Value</th>
      </tr>
      @foreach (Claim claim in User.Claims)
      {
        <tr>
          <td>@claim.Type</td>
          <td>@claim.Value</td>
        </tr>
      }
    </table>
  </div>
</section>


