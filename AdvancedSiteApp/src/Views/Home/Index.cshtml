@model AdvanceSiteViewModel
@{
    ViewData["Title"] = "Advance Site";
}

<style type="text/css">
    .headerSpacing {
        padding-top: 32px;
    }

    .iframe-container {
        overflow: hidden;
        /* Calculated from the aspect ration of the content (in case of 16:9 it is 9/16= 0.5625) padding-top: 56.25%;*/
        position: absolute;
        left: 0;
        width: 100%;
        height: 100%;
    }

        .iframe-container iframe {
            border: 0;
            height: 100%;
            left: 0;
            position: absolute;
            top: 0;
            width: 100%;
        }

    /* 4x3 Aspect Ratio */
    .iframe-container-4x3 {
        padding-top: 75%;
    }

    .iframe-container-16x9 {
        padding-top: 56%;
    }
</style>

<div class="iframe-container iframe-container-16x9">
    <iframe src="@Model.AdvancedSiteLink" allowfullscreen>
    </iframe>
</div>